{
  "name": "Blockchain_App",
  "version": "1.0.0",
  "scripts": {
    "api": "cd api && npm run start",
    "app": "cd app && npm start",
    "dev": "concurrently \"npm run api\" \"npm run app\"",
    "install:api": "cd api && npm install",
    "install:app": "cd app && npm install",
    "install:all": "npm install && npm run install:api && npm run install:app"
  },
  "devDependencies": {
    "concurrently": "^7.0.0"
  }
}